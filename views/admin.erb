<%= js :admin %>

<a href="/" class="return">Page principale</a>
<div class="margin-left-50">
    <h1><span class="glyphicon glyphicon-wrench"></span>Admin</h1>
</div>

<div id="content">

<table class="table">
    <thead>
        <th>Titre</th>
        <th title="Active tes posts pour les rendres visible aux visiteurs.">Actif</th>
        <th>Action</th>
        <th>Vues</th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
        <td><%= post.titre %></td>
        <td>
          <span id="<%= post.id%>" class="switch-actif glyphicon <%= post.actif ? 'glyphicon-check' : 'glyphicon-unchecked' %> is-clickable"></span>
        </td>
        <td>
          <a href="/admin/<%= post.id%>" class="btn">
            <span class="glyphicon glyphicon-pencil" title="Editer"></span>
          </a>
          <a href="/admin/<%= post.id%>/show" class="btn">
            <span class="glyphicon glyphicon-eye-open" title="Voir"></span>
          </a>
          <a href="/admin/post/<%= post.id%>/delete" title="Supprimer" onclick="return confirm('Es-tu sûr de vouloir supprimer ce post ?');">
            <span class="glyphicon glyphicon-trash btn"></span>
          </a>
        </td>
        <td><%= post.views %></td>
      <% end %>
    </tbody>
</table>

<script>
$('#myModal').on('shown.bs.modal', function () {
  $('#myInput').focus()
})
</script>
<!-- Button trigger modal -->
<button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">
  Nouveau post
</button>

<!-- Modal de création de post-->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Fermer"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Créer un nouveau post</h4>
      </div>
      <form action="/admin/new" method='post' class="form-horizontal">
        <div class="modal-body">
    
          <div class="row">
            <label class="col-sm-2 control-label" >Titre</label>
            <div class ="col-sm-10 margin-bottom-20">
                <input type='text' name='titre' class="form-control col-sm-12" placeholder="Titre">
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
          <button type="submit" class="btn btn-primary">Créer</button>
        </div>

      </form>
    </div>
  </div>
</div>

</div>
