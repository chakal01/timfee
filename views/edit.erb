<script>
  $(document).ready(function(){
    $("#preview").html( $("#contenthtml").val() );

    $("#contenthtml").keyup(function() {
      $("#preview").html( $("#contenthtml").val() );
    });
  });
  </script>

  <a href="/admin"> Retour </a>
<div id="title">
  <h1><%= @titre %></h1>
</div>

<div id="contentEdit" class="text-center">
  

  <form action="<%= @form_url %>" method='post'>
    
    <div class="row">
      <div class ="col-sm-6 margin-bottom-20">
          <input type='text' name='titre' value="<%=@post.titre%>" class="form-control col-sm-12" placeholder="Titre">
        
      </div>
      <div class ="col-sm-6">
        <input type='text' name='date' value="<%=@post.date%>" class="form-control" placeholder="DD/MM/YYYY">
      </div>
    </div>  

    <% if @form_url != "/admin/new" %>
      <div class="row">
        <label class="col-sm-2" style="margin-top: 5px;">Icon du Post :</label>
        <div class="col-sm-10">
          <select name='icon' class="form-control">
            <%@post.images.each do |img|%>
              <option value="<%= img.id%>"><%= img.titre%></option>
            <% end %>
          </select>
        </div>
      </div>
    <% end %>

    <div class="row" style="margin-top: 15px; margin-bottom: 15px;">
      <div class="col-sm-6">
        <textarea type='text' id="contenthtml" name='content' rows="20" class="form-control">
          <%=@post.content%> 
        </textarea>
      </div>
      <div class="col-sm-6">
        <div id="preview" class="preview" ></div>
      </div>
    </div>

    

    
    <div class="row">
      <button type="submit" class="btn btn-default" style="margin: auto; width: 97%;">Valider</button>
    </div>

  </form>





  <div class="height-50"></div>

  <% if @form_url != "/admin/new" %>
    <hr>
    <h3>Image Uploader </h3>
    <form method="post" action='/admin/upload' class="form-horizontal" enctype="multipart/form-data" > 
      <input type="hidden" name="id" value="<%=@post.id%>">
      <div class="form-group">
        <label class="col-sm-2 control-label">File</label>
        <div class="col-sm-10">
          <input type='file' name='myfile' class="form-control">
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Titre</label>
        <div class="col-sm-8">
          <input type='text' name='titre' placeholder="Image name" class="form-control" placeholder="Titre">
        </div>
        <div class="col-sm-2">
          <button type="submit" class="btn btn-default">Upload</button>
        </div>
      </div>
    </form>
    <div class="height-50"></div>
  <% end %>



</div>