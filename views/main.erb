
<div id="content" class="generica">
	<h1 class="title">Copeaux d'aronde</h1>
	<h2 class="subtitle">Mobilier multimatériaux, d'intérieur et d'extérieur, par Timothée Delay</h2>
	<div id="images">
		<% @posts.each do |post| %>
			<div class="col-sm-3">
				<a href="/<%= post.id%>" class="linked">
				<% if post.icon %> 
				<div class="block border-soft shadow-hover" style="background-image: url('/images/<%=post.folder_hash%>/<%=post.icon.file_icon%>')"></div>
				<% else %>
				<div class="block border-soft shadow-hover" style="background-image: url('/images/no-image.jpg')"></div>
				<% end %>
				</a>
			</div>
		<% end %>
	</div>
</div>
